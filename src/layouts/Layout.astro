---
const { title,description } = Astro.props;
import "@fontsource-variable/fredoka";
import { ClientRouter } from 'astro:transitions';
import Header from "@/components/header.astro";
import Footer from "@/components/footer.astro";
import Error404 from "@/components/error404.astro"
import '@/styles/global.css';
import Analytics from '@vercel/analytics/astro'
import SpeedInsights  from "@vercel/speed-insights/astro"
---

<!doctype html>
<html lang="en">
    <head>
        <script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-8905411358295970" crossorigin="anonymous"></script>
        <ClientRouter />
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta name="robots" content="index, follow">
        <meta name="author" content="Misco_Dev">
        <meta name="title" content={ title } />
        <meta name="description" content={ description } />
        <meta name="keywords" content="qronexstudios,qronex studios,up to infinity incremental, up to infinity incremental roblox, qronexstudio, qronex studio, qronexstudio roblox, qronex studio roblox, incremental roblox, qronex devs, qronex_devs, Misco devs, Misco_devs, Misco devs roblox, incremental game, roblox game">
        <meta name="theme-color" content="#8a5be2"> <meta property="og:type" content="website" />
        <meta property="og:url" content="https://qronexstudios.com/" />
        <meta property="og:title" content={ title } />
        <meta property="og:description" content={ description } />
        <meta property="og:image" content="https://qronexstudios.com/image/icon.png" />
        <meta property="og:site_name" content="Up To Infinity Incremental" />
        <meta property="twitter:card" content="summary_large_image" />
        <meta property="twitter:url" content="https://qronexstudios.com/" />
        <meta property="twitter:title" content={ title } />
        <meta property="twitter:description" content="A Roblox game where progress never ends, immerse yourself in an infinite incremental universe with Up To Infinity Incremental!" />
        <meta property="twitter:image" content="https://qronexstudios.com/image/icon.png" />
        <meta property="twitter:creator" content="@QronexStudio" />
        <meta name="mobile-web-app-capable" content="yes">
        <meta name="apple-mobile-web-app-title" content="Up To Infinity Incremental">
        <link rel="icon" type="image/x-icon" href="/image/icon.ico" />
        <link rel="apple-touch-icon" href="/image/icon.png">
        <meta name="generator" content={Astro.generator} />
        <title>{ title }</title>
        <style is:global>
            :root {
                --color-primary: #8a5be2;
                --color-secondary: #ff69b4;
                --color-accent: #00f0ff;

                --color-text-light: #fff;
                --color-text-medium: #eee;
                --color-text-dark: #ddd;

                --color-bg-dark: #000;
                --color-bg-transparent-dark: #000000b3;
                --color-bg-transparent-light: #ffffff0d;
                --color-bg-transparent-medium: #ffffff1a;

                --color-shadow-light: #00000033;
                --color-shadow-medium: #00000066;
                --color-border-subtle: #ffffff1a;

                --gradient-primary: linear-gradient(90deg, var(--color-primary), var(--color-secondary));
                --gradient-primary-hover: linear-gradient(90deg, var(--color-secondary), var(--color-primary));

                --color-discord: #5865f2;
                --color-twitter: #1da1f2;
                --color-github: #333;
            }

            html {
                scroll-behavior: smooth;
            }

            body {
                margin: 0;
                font-family: 'Fredoka variable', sans-serif;
                font-weight: 900;
                position: relative;
                width: 100vw;
                min-height: 100vh;
                color: var(--color-text-medium); 
                background-color: var(--color-bg-dark);
                overflow-x: hidden;
                display: flex;
                flex-direction: column;
                height: 100%;
            }

            body::before {
                content: "";
                position: fixed;
                top: 0;
                left: 0;
                width: 100vw;
                height: 100vh;
                background: url('/image/background.webp') center center / cover no-repeat fixed;
                opacity: 0.3;
                z-index: -2;
            }

            body::after {
                content: "";
                position: fixed;
                top: 0;
                left: 0;
                width: 100vw;
                height: 100vh;
                background: linear-gradient(180deg, #0000004d 0%, #000000b3 100%);
                z-index: -1;
            }

            h1, h2, h3, h4, h5, h6 {
                color: var(--color-text-light);
                font-weight: 700;
                margin-top: 1em;
                margin-bottom: 0.5em;
            }

            p {
                margin-bottom: 1em;
                line-height: 1.6;
            }

            a {
                color: var(--color-primary);
                text-decoration: none;
            }

            a:hover {
                color: var(--color-secondary);
                text-decoration: underline;
            }
        </style>
    </head>
    <body >
        <Analytics />
        <SpeedInsights />
        <Header></Header>
        <slot>
            <Error404></Error404>
        </slot>
        <Footer></Footer>
        <script>
            document.addEventListener("visibilitychange", () => {
                const favicon = document.querySelector("link[rel~='icon']");
                if (favicon instanceof HTMLLinkElement) {
                    favicon.href = document.hidden
                        ? "/image/inactive-icon.ico"
                        : "/image/icon.ico";
                }
            });
        </script>
    </body>
</html>