<style>
    * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
    }

    body {
        padding-top: 70px;
        overflow-x: hidden;
        font-family: sans-serif;
    }

    .navbar {
        border: 1px solid #000;
        background-color: #0000004d;
        backdrop-filter: blur(10px);
        padding: 15px 20px;
        position: relative;
        top: -50px;
        width: 62.5vw;
        z-index: 1000;
        box-shadow: 0 2px 8px #0008;
        font-size: 24px;
        margin: auto;
        border-radius: 50px;
        min-width: 1200px;
        transition: border-radius 0.3s ease-in-out;
    }

    .nav-container {
        max-width: 1200px;
        margin: 0 auto;
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 0 15px;
    }

    .logo {
        font-size: 24px;
        font-weight: bold;
        color: #fff;
        text-decoration: none;
    }

    .logo::selection{
        background-color: transparent;
    }

    .nav-links {
        list-style: none;
        display: flex;
        justify-content: center;
        margin: 0;
        padding: 0;
    }

    .nav-links li {
        margin: 0 15px;
    }

    .nav-link {
        color: inherit;
        text-decoration: none;
        font-weight: 700;
        font-size: 20px;
        padding: 0.5rem 1rem;
        position: relative;
        transition: all 0.3s ease;
        border-radius: 8px;
        background: linear-gradient(90deg, #8a5be2, #ff69b4);
        background-size: 200% 100%;
        background-position: 100%;
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .nav-link::selection{
        background-color: transparent;
    }

    .nav-link::after {
        content: '';
        position: absolute;
        bottom: -2px;
        left: 0;
        width: 0;
        height: 2px;
        background: linear-gradient(90deg, #8a5be2, #ff69b4);
        transition: all 0.3s ease;
        box-shadow: 0 0 8px #8a5be24d;
    }

    .nav-link:hover {
        background-position: 0%;
        transform: translateY(-2px);
        text-shadow: 0 0 8px #8a5be280;
    }

    .nav-link:hover::after {
        width: 100%;
    }

    .menu-toggle {
        display: none;
    }

    .menu-icon {
        display: none;
        flex-direction: column;
        justify-content: center;
        cursor: pointer;
        width: 24px;
        height: 20px;
        z-index: 1100;
        position: relative;
    }

    .menu-icon span {
        height: 2px;
        width: 100%;
        background-color: #fff;
        border-radius: 2px;
        transition: all 0.3s ease-in-out;
        transform-origin: left center;
        position: absolute;
    }

    .menu-icon span:nth-child(1) {
        top: 2px;
    }

    .menu-icon span:nth-child(2) {
        top: 50%;
        transform: translateY(-50%);
    }

    .menu-icon span:nth-child(3) {
        bottom: 2px;
    }

    .menu-toggle:checked ~ .navbar .menu-icon span:nth-child(1) {
        transform: rotate(45deg);
        top: 0.75px;
        left: 2px;
    }

    .menu-toggle:checked ~ .navbar .menu-icon span:nth-child(2) {
        opacity: 0;
    }

    .menu-toggle:checked ~ .navbar .menu-icon span:nth-child(3) {
        transform: rotate(-45deg);
        bottom: 0.75px;
        left: 2px;
    }

    @media (max-width: 1250px) {
        .navbar {
            max-width: 1200px;
            min-width: 350px;
            width: 95vw;
            border-radius: 50px;
        }

        .menu-icon {
            display: flex;
            margin-left: auto;
        }

        .logo {
            margin-right: auto;
            margin-left: 0;
        }

        .nav-links {
            position: absolute;
            top: 100%;
            left: 50%;
            transform: translateX(-50%);
            background: #000c;
            width: 100%;
            flex-direction: column;
            align-items: center;
            height: 0;
            overflow: hidden;
            transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
            border-radius: 0 0 25px 25px;
            padding: 0;
        }

        .menu-toggle:checked ~ .navbar {
            border-radius: 50px 50px 0 0 !important;
        }

        .menu-toggle:checked ~ .navbar .nav-links {
            height: 250px;
            padding: 1rem 0;
        }
    }

    @media (max-width: 520px) {
        .navbar {
            width: 85vw;
        }

        .logo{
            font-size: 20px;
        }
    }
</style>

