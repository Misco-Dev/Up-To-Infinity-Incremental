---
import DiscordIcon from '@/assets/svg/discord.svg';
import TwitterIcon from '@/assets/svg/twitter.svg';
import GithubIcon from '@/assets/svg/github.svg';
---

<footer class="footer-container" role="contentinfo">
    <div class="footer-content">
        <div class="footer-section">
            <p class="copyright">&copy; 2025 Up To Infinity Incremental</p>
            <p class="rights">All rights reserved</p>
        </div>
        
        <nav class="footer-links" aria-label="Enlaces de pie de página">
            <a href="/conditions/privacy" class="footer-link">Privacy Policy</a>
            <a href="/conditions/terms" class="footer-link">Terms of Use</a>
            <a href="/conditions/legal" class="footer-link">Legal</a>
        </nav>
        
        <div class="social-links">
            <a href="https://discord.gg/RnQP9BQjge" target="_blank" rel="noopener noreferrer" class="social-link discord" aria-label="Visita nuestro servidor de Discord">
                <DiscordIcon class="icon" />
            </a>
            <a href="https://x.com/QronexStudio" target="_blank" rel="noopener noreferrer" class="social-link twitter" aria-label="Síguenos en X (anteriormente Twitter)">
                <TwitterIcon class="icon" />
            </a>
            <a href="https://github.com/misco-j/Up-To-Infinity-Incremental" target="_blank" rel="noopener noreferrer" class="social-link github" aria-label="Visita nuestro repositorio en GitHub">
                <GithubIcon class="icon" />
            </a>
        </div>
    </div>
</footer>

<style>
    :root {
        --color-primary: #8a5be2;
        --color-secondary: #ff69b4;
        --color-text-light: #fff;
        --color-text-medium: #eee;
        --color-text-dark: #ddd;
        --color-bg-transparent-light: #ffffff0d;
        --color-bg-transparent-medium: #ffffff1a;
        --color-shadow-light: #0000004d;
        --color-shadow-medium: #00000066;

        --color-discord: #5865f2;
        --color-twitter: #1DA1F2;
        --color-github: #333;
    }

    .footer-container {
        background: #0000004d;
        backdrop-filter: blur(10px);
        -webkit-backdrop-filter: blur(10px);
        border-top: 1px solid #ffffff1a;
        padding: 1.5rem 0;
        margin-top: auto;
        position: relative;
        z-index: 10;
        box-shadow: 0 -4px 15px var(--color-shadow-medium);
    }

    .footer-content {
        max-width: 1300px;
        margin: 0 auto;
        padding: 0 2rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;
        gap: 1.5rem;
    }

    .footer-section {
        text-align: left;
    }

    .copyright {
        font-size: 1.05rem;
        color: var(--color-text-light);
        margin: 0;
        font-weight: 700;
        letter-spacing: 0.5px;
    }

    .rights {
        font-size: 0.9rem;
        color: var(--color-text-dark);
        margin: 0.3rem 0 0;
        letter-spacing: 0.3px;
    }

    .copyright, .rights {
        cursor: default;
    }

    .footer-links {
        display: flex;
        gap: 2rem;
    }

    .footer-links::selection{
        background-color: transparent;
    }

    .footer-link {
        color: var(--color-text-dark);
        text-decoration: none;
        font-size: 0.95rem;
        transition: all 0.3s ease;
        position: relative;
        padding: 0.25rem 0;
        font-weight: 700;
    }

    .footer-link::after {
        content: '';
        position: absolute;
        bottom: -2px;
        left: 0;
        width: 0;
        height: 2px;
        background: linear-gradient(90deg, var(--color-primary), var(--color-secondary));
        transition: all 0.3s ease;
        border-radius: 2px;
        box-shadow: 0 0 8px var(--color-primary);
    }

    .footer-link:hover {
        color: var(--color-text-light);
        transform: translateY(-2px);
        text-shadow: 0 0 8px #ffffff80;
    }

    .footer-link:hover::after {
        width: 100%;
        box-shadow: 0 0 12px var(--color-primary);
    }

    .social-links {
        display: flex;
        gap: 1rem;
    }

    .social-link {
        color: var(--color-text-light);
        text-decoration: none;
        transition: all 0.3s ease;
        padding: 0.5rem;
        border-radius: 50%;
        background: #8a5be233;
        border: 1.5px solid #8a5be24d;
        display: flex;
        align-items: center;
        justify-content: center;
        width: 45px;
        height: 45px;
        position: relative;
        overflow: hidden;
        box-shadow: 0 2px 10px #0000004d;
    }

    .social-link::before {
        content: '';
        position: absolute;
        inset: 0;
        background: radial-gradient(circle at center, #ffffff1a, transparent);
        opacity: 0;
        transition: opacity 0.3s ease, transform 0.3s ease;
        transform: scale(0);
    }

    .social-link .icon {
        width: 22px;
        height: 22px;
        fill: currentColor;
        transition: all 0.3s ease;
        position: relative;
        z-index: 2;
    }

    .social-link:hover {
        transform: translateY(-4px) scale(1.05);
        box-shadow: 0 8px 20px #00000066;
    }

    .social-link:hover::before {
        opacity: 1;
        transform: scale(1);
    }

    .social-link:hover .icon {
        filter: drop-shadow(0 0 8px currentColor);
    }

    .discord:hover {
        background: var(--color-discord);
        border-color: var(--color-discord);
        box-shadow: 0 6px 15px #5865f299;
        color: var(--color-text-light);
    }

    .twitter:hover {
        background: var(--color-twitter);
        border-color: var(--color-twitter);
        box-shadow: 0 6px 15px #1da1f299;
        color: var(--color-text-light);
    }

    .github:hover {
        background: var(--color-github);
        border-color: var(--color-github);
        box-shadow: 0 6px 15px #33333399;
        color: var(--color-text-light);
    }

    @media (max-width: 768px) {
        .footer-content {
            flex-direction: column;
            text-align: center;
            gap: 1.5rem;
            padding: 0 1.5rem;
        }

        .footer-section {
            text-align: center;
        }

        .footer-links {
            flex-direction: column;
            gap: 0.8rem;
            align-items: center;
        }

        .footer-link {
            font-size: 1rem;
            padding: 0.4rem 0;
        }

        .footer-link::after {
            bottom: -1px;
        }

        .social-links {
            justify-content: center;
            gap: 1.2rem;
        }

        .social-link {
            width: 40px;
            height: 40px;
        }

        .social-link .icon {
            width: 20px;
            height: 20px;
        }
    }

    @media (max-width: 480px) {
        .footer-content {
            padding: 0 1rem;
        }

        .copyright {
            font-size: 0.95rem;
        }

        .rights {
            font-size: 0.8rem;
        }

        .footer-links {
            gap: 0.7rem;
        }
        .footer-link {
            font-size: 0.9rem;
        }
    }
</style>