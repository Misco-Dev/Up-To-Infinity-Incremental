---
import Layout from "@/layouts/Layout.astro";
import { Image } from "astro:assets";
import Elite from "@/assets/images/Elite.webp";
import Vip from "@/assets/images/Vip.webp";
import x2RunesBulk from "@/assets/images/x2RunesBulk.webp";
import x2RunesClone from "@/assets/images/x2RunesClone.webp";
import x2IncomeTickSpeed from "@/assets/images/x2IncomeTickSpeed.webp";
import x2Bones from "@/assets/images/x2Bones.webp";
import x2Cash from "@/assets/images/x2Cash.webp";
import x2Clicks from "@/assets/images/x2Clicks.webp";
import x2Damage from "@/assets/images/x2Damage.webp";
import x2Health from "@/assets/images/x2Health.webp";
import x2Horns from "@/assets/images/x2Horns.webp";
import x2Infinities from "@/assets/images/x2Infinities.webp";
import x2Level from "@/assets/images/x2Level.webp";
import x2Multiplier from "@/assets/images/x2Multiplier.webp";
import x2Pixels from "@/assets/images/x2Pixels.webp";
import x2Rebirths from "@/assets/images/x2Rebirths.webp";
import x2ResearchSpeed from "@/assets/images/x2ResearchSpeed.webp";
import x2Slimes from "@/assets/images/x2Slimes.webp";
import x2Tokens from "@/assets/images/x2Tokens.webp";
import x2Xp from "@/assets/images/x2Xp.webp";
import x2WalkSpeed from "@/assets/images/x2WalkSpeed.webp";
import x2MiningDamage from "@/assets/images/x2MiningDamage.webp";
import x2MiningSpeed from "@/assets/images/x2MiningSpeed.webp";
import x2Ores from "@/assets/images/x2Ores.webp";
import X2AttackSpeed from "@/assets/images/x2AttackSpeed.webp";
import Robux from "@/assets/images/robux.webp";

const title = "Up To Infinity Incremental | Shop"
const description = "Browse exclusive boosts and upgrades for Up To Infinity Incremental. Support the game's development and power up your progress with Robux."

const ITEM = [
    {title: "Elite", url: Elite, price: "1199"},
    {title: "Vip", url: Vip, price: "499"},
    {title: "x2 Runes Bulk", url: x2RunesBulk, price: "299"},
    {title: "x2 Runes Clone", url: x2RunesClone, price: "299"},
    {title: "x2 Income Tick Speed", url: x2IncomeTickSpeed, price: "199"},
    {title: "x2 Bones", url: x2Bones, price: "49"},
    {title: "x2 Cash", url: x2Cash, price: "49"},
    {title: "x2 Clicks", url: x2Clicks, price: "49"},
    {title: "x2 Damage", url: x2Damage, price: "49"},
    {title: "x2 Health", url: x2Health, price: "49"},
    {title: "x2 Horns", url: x2Horns, price: "49"},
    {title: "x2 Infinities", url: x2Infinities, price: "49"},
    {title: "x2 Level", url: x2Level, price: "49"},
    {title: "x2 Multiplier", url: x2Multiplier, price: "49"},
    {title: "x2 Pixels", url: x2Pixels, price: "49"},
    {title: "x2 Rebirths", url: x2Rebirths, price: "49"},
    {title: "x2 Research Speed", url: x2ResearchSpeed, price: "49"},
    {title: "x2 Slimes", url: x2Slimes, price: "49"},
    {title: "x2 Tokens", url: x2Tokens, price: "49"},
    {title: "x2 Xp", url: x2Xp, price: "49"},
    {title: "x2 Mining Damage", url: x2MiningDamage, price: "49"},
    {title: "x2 Mining Speed", url: x2MiningSpeed, price: "49"},
    {title: "x2 Ores", url: x2Ores, price: "49"},
    {title: "x2 Attack Speed", url: X2AttackSpeed, price: "49"},
    {title: "x2 Walk Speed", url: x2WalkSpeed, price: "19"},
]
---

<Layout title={ title } description={ description }>
    <main class="shop-page-main" role="main">
        <section class="hero-section" aria-labelledby="shop-title">
            <h1 id="shop-title" class="hero-title title" role="heading" aria-level="1">Shop</h1>
            <p class="hero-subtitle subtitle" role="contentinfo">
                Explore our collection of unique items and support the development of the game.
            </p>
        </section>
        <section class="shop-items" aria-label="Shop Items">
            {ITEM.map(item => 
                <div class="shop-item" >
                    <Image src={item.url} alt={item.title} width={120} height={120} loading="lazy" decoding="async" />
                    <h2 class="item-title">{item.title}</h2>
                    <p class="item-price"><span>{item.price}</span><Image src={Robux} alt="Icono de Robux" class="item-icon" width={24} height={24} loading="lazy" decoding="async" /></p>
                </div>
            )}
        </section>
    </main>
</Layout>

<style>
    :root {
        --color-primary: #8a5be2;
        --color-secondary: #ff69b4;
        --color-text-light: #fff;
        --color-text-medium: #eee;
        --color-text-dark: #ddd;
        --color-bg-transparent-light: #ffffff0d;
        --color-bg-transparent-medium: #ffffff1a;
        --color-shadow-light: #00000033;
        --color-shadow-medium: #0000004d;
    }

    @keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .shop-page-main {
        max-width: 100%;
        padding: 2rem;
    }

    .hero-section {
        text-align: center;
        padding: 4rem 1rem 2rem;
        max-width: 900px;
        margin: 0 auto;
        animation: fadeInUp 0.8s ease forwards;
        animation-delay: 0.2s;
        opacity: 0;
    }

    .hero-title {
        font-size: clamp(2.8rem, 5vw, 4rem);
        font-weight: 900;
        background: linear-gradient(90deg, var(--color-primary), var(--color-secondary));
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        margin-bottom: 1rem;
        text-shadow: 0 4px 15px #8a5be266;
        letter-spacing: 1px;
    }

    .hero-subtitle {
        font-size: clamp(1.2rem, 2.5vw, 1.4rem);
        color: var(--color-text-medium);
        max-width: 700px;
        margin: 0 auto;
        line-height: 1.6;
        text-shadow: 0 1px 6px #0000004d;
        animation: fadeInUp 0.8s ease forwards;
        animation-delay: 0.4s;
        opacity: 0;
    }

    .shop-items {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(220px, 1fr));
        gap: 2.5rem;
        padding: 3rem 0;
        max-width: 1200px;
        margin: 0 auto;
    }

    .shop-item {
        animation: fadeInUp 0.7s ease forwards; 
        opacity: 0;
        background: #ffffff14;
        backdrop-filter: blur(8px);
        -webkit-backdrop-filter: blur(8px);
        border-radius: 18px;
        padding: 1.8rem;
        text-align: center;
        transition: all 0.3s ease;
        box-shadow: 0 6px 20px var(--color-shadow-light);
        border: 1px solid #ffffff26;
    }

    .shop-item:hover {
        background: #ffffff26;
        backdrop-filter: blur(0);
        transform: translateY(-8px);
        box-shadow: 0 12px 30px var(--color-shadow-medium);
        cursor: pointer;
    }

    .shop-items::selection{
        background-color: transparent;
    }

    .shop-item:nth-child(1) { animation-delay: 0.5s; }
    .shop-item:nth-child(2) { animation-delay: 0.6s; }
    .shop-item:nth-child(3) { animation-delay: 0.7s; }
    .shop-item:nth-child(4) { animation-delay: 0.8s; }
    .shop-item:nth-child(5) { animation-delay: 0.9s; }
    .shop-item:nth-child(6) { animation-delay: 1.0s; }
    .shop-item:nth-child(7) { animation-delay: 1.1s; }
    .shop-item:nth-child(8) { animation-delay: 1.2s; }
    .shop-item:nth-child(9) { animation-delay: 1.3s; }
    .shop-item:nth-child(10) { animation-delay: 1.4s; }
    .shop-item:nth-child(11) { animation-delay: 1.5s; }
    .shop-item:nth-child(12) { animation-delay: 1.6s; }
    .shop-item:nth-child(13) { animation-delay: 1.7s; }
    .shop-item:nth-child(14) { animation-delay: 1.8s; }
    .shop-item:nth-child(15) { animation-delay: 1.9s; }
    .shop-item:nth-child(16) { animation-delay: 2.0s; }
    .shop-item:nth-child(17) { animation-delay: 2.1s; }
    .shop-item:nth-child(18) { animation-delay: 2.2s; }
    .shop-item:nth-child(19) { animation-delay: 2.3s; }
    .shop-item:nth-child(20) { animation-delay: 2.4s; }
    .shop-item:nth-child(21) { animation-delay: 2.5s; }
    .shop-item:nth-child(22) { animation-delay: 2.6s; }
    .shop-item:nth-child(23) { animation-delay: 2.7s; }
    .shop-item:nth-child(24) { animation-delay: 2.8s; }
    .shop-item:nth-child(25) { animation-delay: 2.9s; }

    .shop-item img:not(.item-icon) {
        border-radius: 14px;
        width: 100px;
        height: 100px;
        object-fit: contain;
        margin-bottom: 1.2rem;
        box-shadow: 0 4px 10px #00000033;
    }

    .item-title {
        font-size: 1.3rem;
        font-weight: bold;
        color: var(--color-text-light);
        margin-bottom: 0.8rem;
    }

    .item-price {
        font-size: 1.2rem;
        color: #9ef;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
        font-weight: 600;
    }

    .item-icon {
        width: 22px;
        height: 22px;
    }

    @media (max-width: 768px) {
        .shop-items {
            grid-template-columns: repeat(auto-fill, minmax(180px, 1fr));
            gap: 2rem;
            padding: 2rem 0;
        }

        .shop-item {
            padding: 1.5rem;
            border-radius: 16px;
        }

        .shop-item img:not(.item-icon) {
            width: 80px;
            height: 80px;
        }

        .item-title {
            font-size: 1.15rem;
        }

        .item-price {
            font-size: 1.1rem;
        }

        .item-icon {
            width: 20px;
            height: 20px;
        }
    }

    @media (max-width: 480px) {
        .shop-page-main {
            padding: 1rem;
        }

        .hero-section {
            padding: 3rem 0.5rem 1.5rem;
        }

        .hero-title {
            font-size: 2.2rem;
        }

        .hero-subtitle {
            font-size: 1.1rem;
        }

        .shop-items {
            grid-template-columns: 1fr;
            gap: 1.5rem;
            padding: 1.5rem 0;
        }

        .shop-item {
            padding: 1.2rem;
            border-radius: 14px;
        }

        .shop-item img:not(.item-icon) {
            width: 70px;
            height: 70px;
            margin-bottom: 1rem;
        }

        .item-title {
            font-size: 1rem;
        }

        .item-price {
            font-size: 1rem;
        }

        .item-icon {
            width: 18px;
            height: 18px;
        }

        .shop-item:hover {
            transform: none;
            background: #ffffff14;
            box-shadow: 0 6px 20px var(--color-shadow-light);
            backdrop-filter: blur(8px);
        }
    }
</style>