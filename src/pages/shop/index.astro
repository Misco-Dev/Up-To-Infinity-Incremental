<style>
    .about-container {
        max-width: 100%;
        padding: 2rem;
    }

    .hero-section {
        text-align: center;
        padding: 4rem 1rem 2rem;
        max-width: 900px;
        margin: 0 auto;
        animation: fadeInUp 0.6s ease-out 0.5s forwards;
    }

    .title {
        font-weight: 900;
        background: linear-gradient(90deg, #8a5be2, #ff69b4);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        text-align: center;
        margin-bottom: 1rem;
        text-shadow: 0 2px 10px #8a5be24d;
        letter-spacing: 1px;
    }

    .subtitle {
        font-size: 1.2rem;
        color: #ccc;
    }

    .shop-items {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
        gap: 2rem;
        padding: 2rem 0;
    }

    @keyframes fadeInUp {
      from {
        opacity: 0;
        transform: translateY(20px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    .shop-item {
      animation: fadeInUp 0.6s ease-out forwards;
      opacity: 0;
      background: #ffffff0f;
      backdrop-filter: blur(6px);
      border-radius: 16px;
      padding: 1.5rem;
      text-align: center;
      transition: all 0.3s ease;
      box-shadow: 0 4px 12px #00000033;
    }

    .shop-item:hover {
      backdrop-filter: blur(0);
      transform: translateY(-6px);
      background: #ffffff1a;
    }

    .shop-item:nth-child(1) { animation-delay: 0.1s; }
    .shop-item:nth-child(2) { animation-delay: 0.2s; }
    .shop-item:nth-child(3) { animation-delay: 0.3s; }
    .shop-item:nth-child(4) { animation-delay: 0.4s; }
    .shop-item:nth-child(5) { animation-delay: 0.5s; }
    .shop-item:nth-child(6) { animation-delay: 0.6s; }
    .shop-item:nth-child(7) { animation-delay: 0.7s; }
    .shop-item:nth-child(8) { animation-delay: 0.8s; }
    .shop-item:nth-child(9) { animation-delay: 0.9s; }
    .shop-item:nth-child(10) { animation-delay: 1.0s; }
    .shop-item:nth-child(11) { animation-delay: 1.1s; }
    .shop-item:nth-child(12) { animation-delay: 1.2s; }

    .shop-item img:not(.item-icon) {
      border-radius: 12px;
      width: 100px;
      height: auto;
      margin-bottom: 1rem;
    }

    .item-title {
        font-size: 1.2rem;
        font-weight: bold;
        color: #fff;
        margin-bottom: 0.5rem;
    }

    .item-price {
        font-size: 1.1rem;
        color: #9ef;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.4rem;
    }

    .item-icon {
        width: 20px;
        height: 20px;
    }

    .hero-title {
        font-size: 4rem;
        font-weight: 900;
        background: linear-gradient(90deg, #8a5be2, #ff69b4);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        text-shadow: 0 6px 20px #8a5be266;
        margin-bottom: 1rem;
        letter-spacing: -1px;
    }

    .hero-subtitle {
        font-size: 1.4rem;
        font-weight: 400;
        color: #ccc;
        max-width: 700px;
        margin: 0 auto;
        line-height: 1.6;
        text-shadow: 0 1px 6px #0000004d;
    }

    /* Animación suave */
    @keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>