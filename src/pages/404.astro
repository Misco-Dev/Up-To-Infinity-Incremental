---
import Layout from "@/layouts/Layout.astro"
---
<Layout title="Up To Infinity Incremental | 404">
    <main role="main" style="display: flex; flex-direction: column; align-items: center; justify-content: center; height: 100vh; text-align: center;">
        <h1 class="title-404">404</h1>
        <p class="incorrect-route">Sorry, the page you're looking for doesn't exist.</p>
        <a class="go-back" href="/">Go Back Home</a>
    </main>

    <style>
        .title-404 {
        font-size: 10rem;
        margin: 0;
        font-weight: 900;
        background: linear-gradient(45deg, #fff, #f0f0f0);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        text-shadow: 0 0 30px rgba(255, 255, 255, 0.5);
        animation: glow 3s ease-in-out infinite;
        text-align: center;
        width: 100%;
        }
        .incorrect-route {
        font-size: 1.8rem;
        margin: 1rem 0 2rem;
        color: rgba(255, 255, 255, 0.85);
        text-shadow: 0 2px 6px rgba(0, 0, 0, 0.3);
        }
        .go-back {
        display: inline-block;
        padding: 0.9rem 2rem;
        font-size: 1.25rem;
        font-weight: bold;
        color: #fff;
        background: rgba(255, 255, 255, 0.15);
        border: 2px solid rgba(255, 255, 255, 0.3);
        border-radius: 50px;
        text-decoration: none;
        transition: all 0.3s ease;
        backdrop-filter: blur(6px);
        }
        .go-back:hover {
        background: rgba(255, 255, 255, 0.3);
        border-color: rgba(255, 255, 255, 0.5);
        transform: translateY(-3px);
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
        }
        @keyframes glow {
        0%, 100% {
            text-shadow: 0 0 30px rgba(255, 255, 255, 0.5);
        }
        50% {
            text-shadow: 0 0 60px rgba(255, 255, 255, 1);
        }
        }
        body:hover {
        cursor: default;
        }
    </style>
</Layout>
