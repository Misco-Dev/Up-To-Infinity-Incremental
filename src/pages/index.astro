<style>
    :root {
        --color-primary: #8a5be2;
        --color-secondary: #ff69b4;
        --color-text-light: #fff;
        --color-text-medium: #eee;
        --color-text-dark: #ddd;
        --color-bg-transparent-light: #ffffff0d;
        --color-bg-transparent-medium: #ffffff1a;
        --color-shadow-light: #0000004d;
        --color-shadow-medium: #00000066;
    }

    @keyframes fadeInUp {
        0% {
            opacity: 0;
            transform: translateY(20px);
        }
        100% {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .main-content {
        overflow-x: hidden;
    }

    .hero-section {
        min-height: 80vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 2rem;
        animation: fadeInUp 1s ease forwards;
        animation-delay: 0.2s;
        opacity: 0;
    }

    .container {
        max-width: 1100px;
        margin: 0 auto;
        padding: 3rem;
        text-align: center;
        background: var(--color-bg-transparent-light);
        border-radius: 24px;
        box-shadow: 0 8px 32px var(--color-shadow-light);
        backdrop-filter: blur(10px);
        -webkit-backdrop-filter: blur(10px);
        border: 1px solid var(--color-bg-transparent-medium);
        transition: transform 0.3s ease, box-shadow 0.3s ease, background 0.3s ease;
        animation: fadeInUp 1s ease forwards;
        animation-delay: 0.4s;
        opacity: 0;
    }

    .container:hover {
        transform: translateY(-8px);
        background: var(--color-bg-transparent-medium);
        box-shadow: 0 16px 64px var(--color-shadow-medium);
        backdrop-filter: blur(12px);
    }

    .title {
        font-size: clamp(2.8rem, 6vw, 4.5rem);
        font-weight: 900;
        background: linear-gradient(135deg, var(--color-primary), var(--color-secondary));
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        margin-bottom: 1.8rem;
        text-shadow: 0 4px 15px #8a5be266;
        animation: fadeInUp 1s ease forwards;
        animation-delay: 0.6s;
        opacity: 0;
    }

    .introduction {
        font-size: clamp(1.6rem, 3.5vw, 2.8rem);
        color: var(--color-text-light);
        font-weight: bold;
        text-transform: uppercase;
        margin: 1.8rem 0;
        letter-spacing: 0.12em;
        animation: fadeInUp 1s ease forwards;
        animation-delay: 0.8s;
        opacity: 0;
    }

    .introduction-content {
        font-size: clamp(1.35rem, 2.8vw, 2.2rem);
        color: var(--color-text-medium);
        margin: 1.2rem 0;
    }

    .introduction-content-description {
        font-size: clamp(1.1rem, 2.2vw, 1.35rem);
        color: var(--color-text-dark);
        margin: 1.2rem auto 2rem;
        max-width: 850px;
        line-height: 1.7;
    }

    .features {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 2.5rem;
        margin-top: 3.5rem;
        animation: fadeInUp 1s ease forwards;
        animation-delay: 1s;
        opacity: 0;
    }

    .feature-item {
        padding: 2rem;
        background: var(--color-primary-transparent);
        background: linear-gradient(145deg, #8a5be21a, #ff69b41a);
        border-radius: 18px; 
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        border: 1px solid #ffffff14;
    }

    .feature-item:hover {
        transform: translateY(-7px);
        box-shadow: 0 10px 25px #00000066;
    }

    .feature-icon {
        font-size: 3rem; 
        margin-bottom: 1.2rem;
        display: inline-block;
        color: var(--color-secondary);
        text-shadow: 0 0 10px #ff69b499;
    }

    .feature-item h4 {
        font-size: 1.35rem;
        color: var(--color-text-light);
        margin: 0.6rem 0;
    }

    .feature-item p {
        color: var(--color-text-dark);
        font-size: 1.05rem;
        line-height: 1.5;
    }

    .countdown-section {
        text-align: center;
        padding: 4rem 1rem;
        background: #00000020;
        margin-top: 4rem;
        border-radius: 12px;
        backdrop-filter: blur(5px);
        border: 1px solid #ffffff0d;
    }

    .countdown-text {
        font-size: clamp(1.8rem, 3.5vw, 2.5rem);
        color: var(--color-text-light);
        margin-bottom: 2.5rem;
        text-transform: uppercase;
        letter-spacing: 0.15em;
        background: linear-gradient(135deg, var(--color-primary), var(--color-secondary));
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        text-shadow: 0 2px 10px #8a5be24d;
        animation: fadeInUp 1s ease forwards;
        animation-delay: 1.2s;
        opacity: 0;
    }

    body{
        cursor:default;
    }

    @media (max-width: 768px) {
        .hero-section {
            padding: 1.5rem;
            min-height: auto;
        }

        .container {
            padding: 2.5rem 1.5rem;
            margin: 1.5rem;
            border-radius: 20px;
        }

        .title {
            font-size: 2.75rem;
            margin-bottom: 1.5rem;
        }

        .introduction {
            font-size: 1.75rem;
            margin: 1.5rem 0;
        }

        .introduction-content {
            font-size: 1.45rem;
        }

        .introduction-content-description {
            font-size: 1.15rem;
            margin: 1.2rem auto 1.5rem;
            padding: 0 0.5rem;
        }

        .features {
            grid-template-columns: 1fr; 
            gap: 2rem;
            margin-top: 3rem;
            padding: 0.75rem;
        }

        .feature-item {
            padding: 1.8rem;
            border-radius: 16px;
        }

        .feature-icon {
            font-size: 2.8rem;
            margin-bottom: 1rem;
        }

        .feature-item h4 {
            font-size: 1.3rem;
        }

        .feature-item p {
            font-size: 1.05rem;
        }

        .countdown-section {
            padding: 3rem 1.5rem;
            margin-top: 3rem;
        }

        .countdown-text {
            font-size: 2rem;
            margin-bottom: 2rem;
        }
    }

    @media (max-width: 480px) {
        .hero-section {
            padding: 1rem;
        }

        .container {
            padding: 2rem 1rem;
            margin: 0.5rem;
            border-radius: 18px;
        }

        .title {
            font-size: 2.25rem;
        }

        .introduction {
            font-size: 1.5rem;
            margin: 1rem 0;
        }

        .introduction-content {
            font-size: 1.25rem;
        }

        .introduction-content-description {
            font-size: 1rem;
            line-height: 1.6;
            padding: 0 0.5rem;
            margin: 1rem auto 1.2rem;
        }

        .features {
            gap: 1.5rem;
            margin-top: 2rem;
            padding: 0.5rem;
        }

        .feature-item {
            padding: 1.5rem;
            border-radius: 14px;
        }

        .feature-icon {
            font-size: 2.5rem;
            margin-bottom: 0.8rem;
        }

        .feature-item h4 {
            font-size: 1.15rem;
        }

        .feature-item p {
            font-size: 0.95rem;
            line-height: 1.5;
        }

        .countdown-section {
            padding: 2.5rem 1rem;
            margin-top: 2.5rem;
        }

        .countdown-text {
            font-size: 1.7rem;
            margin-bottom: 1.5rem;
        }

        
        .container:hover {
            transform: none;
            box-shadow: 0 8px 32px var(--color-shadow-light);
            background: var(--color-bg-transparent-light);
            backdrop-filter: blur(10px);
        }

        .feature-item:hover {
            transform: none;
            box-shadow: none;
        }
    }
</style>