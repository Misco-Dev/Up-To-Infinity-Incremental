---
import Layout from "@/layouts/Layout.astro";
---

<Layout title="Up To Infinity Incremental | About Us">
    <main role="main" class="about-page-main">
        <div class="main-container">
            <section class="hero-section" aria-labelledby="studio-title">
                <h1 id="studio-title" class="title" role="heading" aria-level="1">Qronex Studio</h1>
                <p class="subtitle">Creators of Up To Infinity Incremental</p>
            </section>

            <section class="content-section">
                <div class="card about-card-1" role="article" aria-labelledby="about-game-title">
                    <h2 id="about-game-title" class="section-title" role="heading" aria-level="2">About The Game</h2>
                    <p class="section-text">
                        Up To Infinity Incremental is a unique incremental game that challenges players to reach infinity through strategic upgrades and careful resource management.
                    </p>
                </div>

                <div class="card about-card-2" role="article" aria-labelledby="our-story-title">
                    <h2 id="our-story-title" class="section-title" role="heading" aria-level="2">Our Story</h2>
                    <p class="section-text">
                        Created by <a href="http://qronexstudiosai.work.gd" target="_blank" rel="noopener noreferrer" class="company-link" aria-label="Visitar sitio web de Qronex Studio">Qronex Studio</a>, we're passionate about creating engaging incremental games that challenge and entertain players.
                    </p>
                </div>

