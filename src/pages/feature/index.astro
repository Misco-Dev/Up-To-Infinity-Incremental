---
import Layout from "@/layouts/Layout.astro";

interface Feature {
	title: string;
	description: string;
	icon: string;
}

const features: Feature[] = [
	{
		title: "Infinite Progression",
		description: "Unlock endless possibilities with our unique infinity system",
		icon: "‚ôæÔ∏è",
	},
	{
		title: "Strategic Upgrades",
		description: "Choose your path with meaningful upgrade decisions",
		icon: "‚ö°",
	},
	{
		title: "Dynamic Challenges",
		description: "Face new challenges as you progress through the game",
		icon: "üéÆ",
	},
	{
		title: "Regular Updates",
		description: "New content and features added regularly",
		icon: "üîÑ",
	},
];
---

<Layout title="Game Features | Up To Infinity Incremental">
	<main role="main">
		<div class="about-container">
			<section class="hero-section">
				<h1 class="title">Game Features</h1>
				<p class="subtitle">Discover what makes our game unique</p>
			</section>

			<section class="features-grid">
				{features.map((feature, index) => (
				<article class={`feature-card feature-card-${index + 1}`} style={`animation-delay: ${1.7 + index * 0.2}s`}>
					<div class="feature-icon" aria-hidden="true">{feature.icon}</div>
					<h3>{feature.title}</h3>
					<p>{feature.description}</p>
				</article>
				))}
			</section>
		</div>
	</main>
</Layout>

<style>
	@keyframes fadeInUp {
		from {
		opacity: 0;
		transform: translateY(20px);
		}
		to {
		opacity: 1;
		transform: translateY(0);
		}
	}

	.about-container {
		max-width: 1200px;
		margin: 0 auto;
		padding: 2rem;
		animation: fadeInUp 0.7s ease forwards;
		animation-delay: 0.1s;
		opacity: 0;
		cursor: default;
	}

	.hero-section {
		text-align: center;
		margin-bottom: 4rem;
		padding: 4rem 2rem;
		background: #0005;
		border-radius: 1rem;
		backdrop-filter: blur(10px);
		border: 1px solid #ffffff17;
		animation: fadeInUp 0.7s ease forwards;
		animation-delay: 0.3s;
		opacity: 0;
	}

	.title {
		font-size: clamp(2.5rem, 5vw, 4rem);
		font-weight: 800;
		background: linear-gradient(135deg, #8a5be2, #ff69b4);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		margin-bottom: 1rem;
		animation: fadeInUp 0.7s ease forwards;
		animation-delay: 0.5s;
		opacity: 0;
	}

	.subtitle {
		font-size: clamp(1.25rem, 2.5vw, 1.5rem);
		color: inherit;
		opacity: 0.9;
		animation: fadeInUp 0.7s ease forwards;
		animation-delay: 0.7s;
		opacity: 0;
	}

	.features-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
		gap: 2rem;
		margin-top: 2rem;
		animation: fadeInUp 0.7s ease forwards;
		opacity: 0;
		animation-delay: 1.5s;
	}

	.feature-card {
		background: #8a5be21a;
		padding: 2rem;
		border-radius: 1rem;
		text-align: center;
		transition: transform 0.3s ease;
		opacity: 0;
		animation: fadeInUp 0.5s ease forwards;
		user-select: none;
		cursor: default;
	}

	.feature-card-1 { animation-delay: 1s; }
	.feature-card-2 { animation-delay: 1.25s; }
	.feature-card-3 { animation-delay: 1.5s; }
	.feature-card-4 { animation-delay: 1.75s; }

	.feature-card:hover {
		transform: translateY(-5px);
	}

	.feature-icon {
		font-size: 2.5rem;
		margin-bottom: 1rem;
		display: inline-block;
	}

	.feature-card h3 {
		color: #fff;
		margin: 1rem 0;
		font-size: 1.25rem;
	}

	.feature-card p {
		color: #cdcdcd;
		font-size: 1rem;
		line-height: 1.4;
	}
</style>