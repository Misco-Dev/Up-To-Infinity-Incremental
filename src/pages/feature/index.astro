---
import Layout from "@/layouts/Layout.astro";

interface Feature {
    title: string;
    description: string;
    icon: string;
}

const features: Feature[] = [
	{
		title: "Infinite Progression",
		description: "Unlock endless possibilities with our unique infinity system",
		icon: "âˆž",
	},
	{
		title: "Strategic Upgrades",
		description: "Choose your path with meaningful upgrade decisions",
		icon: "âš¡",
	},
	{
		title: "Dynamic Challenges",
		description: "Face new challenges as you progress through the game",
		icon: "ðŸŽ®",
	},
	{
		title: "Regular Updates",
		description: "New content and features added regularly",
		icon: "ðŸ”„",
	},
];

const title = "Up To Infinity Incremental | Features"
const description = "Discover the unique features of Up To Infinity Incremental: infinite progression, strategic upgrades, dynamic challenges, and frequent updates that keep the game fresh and engaging."
---

<Layout title={ title } description={ description }>
    <main role="main" class="features-page-main">
        <div class="main-container">
            <section class="hero-section" aria-labelledby="features-title">
                <h1 id="features-title" class="title" role="heading" aria-level="1">Game Features</h1>
                <p class="subtitle">Discover what makes our game unique.</p>
            </section>

            <section class="features-grid" aria-label="Lista de caracterÃ­sticas del juego">
                {features.map((feature, index) => (
                    <article class="feature-card" tabindex="0" style={`animation-delay: ${0.5 + index * 0.2}s;`}>
                        <div class="feature-icon" aria-hidden="true">{feature.icon}</div>
                        <h2 role="heading" aria-level="2">{feature.title}</h2>
                        <p>{feature.description}</p>
                    </article>
                ))}
            </section>
        </div>
    </main>
</Layout>

<style>
    :root {
        --color-primary: #8a5be2;
        --color-secondary: #ff69b4;
        --color-text-light: #fff;
        --color-text-medium: #eee;
        --color-text-dark: #ddd;
        --color-bg-transparent-light: #ffffff0d; 
        --color-bg-transparent-medium: #ffffff1a;
        --color-shadow-light: #00000033;
        --color-shadow-medium: #0000004d;
    }

    @keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .features-page-main {
        max-width: 100%;
        padding: 2rem;
    }

    .main-container {
        max-width: 1200px;
        margin: 0 auto;
        animation: fadeInUp 0.7s ease forwards;
        animation-delay: 0.1s;
        opacity: 0;
        cursor: default;
    }

    .hero-section {
        text-align: center;
        margin-bottom: 4rem;
        padding: 4rem 2rem;
        background: #00000066;
        border-radius: 1rem;
        backdrop-filter: blur(12px);
        -webkit-backdrop-filter: blur(12px);
        border: 1px solid #ffffff1a;
        box-shadow: 0 8px 30px #00000066;
        animation: fadeInUp 0.7s ease forwards;
        animation-delay: 0.3s;
        opacity: 0;
    }

    .title {
        font-size: clamp(2.5rem, 5vw, 4rem);
        font-weight: 800;
        background: linear-gradient(135deg, var(--color-primary), var(--color-secondary));
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        margin-bottom: 1rem;
        text-shadow: 0 4px 15px #8a5be266;
        animation: fadeInUp 0.7s ease forwards;
        animation-delay: 0.5s;
        opacity: 0;
    }

    .subtitle {
        font-size: clamp(1.25rem, 2.5vw, 1.5rem);
        color: var(--color-text-medium);
        opacity: 0.9;
        text-shadow: 0 1px 6px #0000004d;
        animation: fadeInUp 0.7s ease forwards;
        animation-delay: 0.7s;
        opacity: 0;
    }

    .features-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr)); 
        gap: 2.5rem;
        margin-top: 2rem;
    }

    .features-grid::selection{
        background-color: transparent;
    }

    .feature-card {
        background: #8a5be21f;
        padding: 2.2rem;
        border-radius: 1.2rem;
        text-align: center;
        transition: transform 0.3s ease, box-shadow 0.3s ease, background 0.3s ease;
        opacity: 0;
        animation: fadeInUp 0.6s ease forwards;
        border: 1px solid #ffffff1a;
        box-shadow: 0 4px 15px #00000033;
    }

    .feature-card:hover {
        transform: translateY(-8px);
        box-shadow: 0 12px 30px #00000066;
        background: #8a5be233;
    }

    .feature-icon {
        font-size: 3rem;
        margin-bottom: 1.2rem;
        display: inline-block;
        color: var(--color-secondary);
        text-shadow: 0 0 15px #ff69b4b3;
    }

    .feature-card h2 {
        color: var(--color-text-light);
        margin: 1rem 0;
        font-size: 1.4rem;
        font-weight: 700;
    }

    .feature-card p {
        color: var(--color-text-dark);
        font-size: 1.05rem;
        line-height: 1.6;
    }

    @media (max-width: 768px) {
        .hero-section {
            padding: 3rem 1.5rem;
            margin-bottom: 3rem;
        }
        .title {
            font-size: 2.2rem;
        }
        .subtitle {
            font-size: 1.1rem;
        }
        .features-grid {
            grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
            gap: 2rem;
        }
        .feature-card {
            padding: 1.8rem;
        }
        .feature-icon {
            font-size: 2.5rem;
        }
        .feature-card h3 {
            font-size: 1.25rem;
        }
        .feature-card p {
            font-size: 1rem;
        }
    }

    @media (max-width: 480px) {
        .features-page-main {
            padding: 1rem;
        }
        .hero-section {
            padding: 2.5rem 1rem;
            margin-bottom: 2rem;
        }
        .title {
            font-size: 1.8rem;
        }
        .subtitle {
            font-size: 1rem;
        }
        .features-grid {
            grid-template-columns: 1fr;
            gap: 1.5rem;
        }
        .feature-card {
            padding: 1.5rem;
            border-radius: 1rem;
        }
        .feature-icon {
            font-size: 2.2rem;
            margin-bottom: 1rem;
        }
        .feature-card h3 {
            font-size: 1.1rem;
            margin: 0.8rem 0;
        }
        .feature-card p {
            font-size: 0.9rem;
            line-height: 1.5;
        }
        
        .feature-card:hover {
            transform: none;
            box-shadow: 0 4px 15px #00000033;
            background: #8a5be21f;
        }
    }
</style>